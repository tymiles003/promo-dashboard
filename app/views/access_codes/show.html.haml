- model_class = AccessCode
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @access_code.user_id
%p
  %strong= model_class.human_attribute_name(:code) + ':'
  %br
  = @access_code.code

= link_to t('.back', :default => t("helpers.links.back")), access_codes_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_access_code_path(@access_code), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), access_code_path(@access_code), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
